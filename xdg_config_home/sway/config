    --font="Noto Sans Mono: size=9" \
    --no-icons \
    --background-color=282828f0 \
    --text-color=ebdbb2ff \
    --selection-color=ebdbb2ff \
    --selection-text-color=282828ff \
    --border-color=458588ff \
    --border-radius=0 \
    --horizontal-pad=10 \
    --vertical-pad=10 \
    --inner-pad=10 \
    --terminal="footclient" \
    --width=50

