### Autostart
# https://github.com/emersion/xdg-desktop-portal-wlr/wiki/%22It-doesn't-work%22-Troubleshooting-Checklist#issues-in-void-linux
exec --no-startup-id dbus-update-activation-environment DISPLAY I3SOCK SWAYSOCK WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
# Pipewire
exec --no-startup-id pipewire
exec --no-startup-id pipewire-pulse

# Colors (see $XDG_DATA_HOME/style.css)
set $bg #282828
set $bg0 #1d2021
set $bg1 #3c3836
set $bg2 #504945
set $fg #ebdbb2
set $fg0 #fbf1c7
set $fg1 #d5c4a1
set $fg2 #bdae93
set $red #cc241d
set $green #98971a
set $yellow #d79921
set $blue #458588
set $purple #b16286
set $aqua #689d6a
set $orange #fe8019
set $gray #a89984

# Variables
set $mod Mod4
set $alt Mod1
set $left h
set $down j
set $up k
set $right l
set $term alacritty
set $browser firefox
set $player_pause playerctl pause
set $player_prev playerctl previous
set $player_pause_toggle playerctl play-pause
set $player_next playerctl next
set $scripts ~/.config/sway
set $kb "type:keyboard"
set $touchpad "2:7:SynPS/2_Synaptics_TouchPad"
set $trackpoint "2:10:TPPS/2_Elan_TrackPoint"
set $border_width 3
set $border_color $blue
set $menu fuzzel \
    --font="Noto Sans Mono: size=9" \
    --no-icons \
    --background-color=282828f0 \
    --text-color=ebdbb2ff \
    --selection-color=ebdbb2ff \
    --selection-text-color=282828ff \
    --border-color=458588ff \
    --border-width=$border_width \
    --border-radius=0 \
    --horizontal-pad=10 \
    --vertical-pad=10 \
    --inner-pad=10 \
    --terminal="footclient" \
    --width=50

set $random_wallpaper $($scripts/random_wallpaper.sh)

xwayland disable
smart_borders on
hide_edge_borders smart
focus_follows_mouse no
client.focused $bg2 $bg $fg $blue $blue
client.unfocused $bg2 $bg1 $fg $blue $bg
default_border pixel $border_width
default_floating_border pixel $border_width
floating_maximum_size 1300 x 700

### Cursor
# Hide cursor after 10 seconds of inactivity
seat seat0 hide_cursor 10000
# Set cursor theme 
seat seat0 xcursor_theme Vimix-cursors 24
# Execute once for gtk applications
# gsettings set org.gnome.desktop.interface cursor-theme Vimix-cursors

for_window [app_id="floating"] floating enable
for_window [app_id="pavucontrol"] floating enable
for_window [app_id="telegram-desktop" title="Choose Files"] floating enable
for_window [title="Monitor directory"] floating enable
for_window [app_id="thunar"] floating enable
for_window [app_id="Firefox" title="Firefox â€” Sharing Indicator"] kill
for_window [app_id="swayimg"] fullscreen

# Random wallpaper
output * bg $random_wallpaper fill

# Example configuration:
# output HDMI-A-1 resolution 1920x1080 position 1920,0
# You can get the names of your outputs by running: swaymsg -t get_outputs

# Idle configuration
bindsym $mod+End exec swaylock -i $random_wallpaper
exec swayidle -w \
            timeout 300 'swaylock -f -c 000000 -i $random_wallpaper' \
            timeout 600 'swaymsg "output * dpms off"' \
            resume 'swaymsg "output * dpms on"' \
            before-sleep 'swaylock -f -c 000000 -i $random_wallpaper'

# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.
input $kb {
    repeat_delay 180
    repeat_rate 60

    xkb_layout us,ua
    xkb_options grp:alt_shift_toggle
}

input $touchpad {
    dwt enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
}

input $trackpoint {
    left_handed enabled
}

### Key bindings
# Basics:
    # Start a terminal
    bindsym $mod+Return exec $term; input $kb xkb_switch_layout 0
    # Start floating terminal         or --app-id
    bindsym $mod+Shift+Return exec $term --class="floating"; input $kb xkb_switch_layout 0

    # Kill focused window
    bindsym --to-code $mod+q kill

    # Start launcher
    bindsym --to-code $mod+d exec $menu --lines=1

    # Power menu
    bindsym --to-code $mod+Shift+q exec $scripts/power_menu.sh

    # Screenshot
    set $sreenshot_path "$HOME/pix/screenshots/$(date +'%Y-%m-%d_%H-%M-%S').png"
    bindsym Print exec grim  "$HOME/pix/screenshots/$(date +'%Y-%m-%d_%H-%M-%S').png"
    # Selection screenshot
    bindsym Shift+Print exec grim -g "$(slurp -b '#282828bb' -c '#458588ff' -w 1)" "$HOME/pix/screenshots/$(date +'%Y-%m-%d_%H-%M-%S').png"

    # Resize and move floating windows
    floating_modifier $mod normal

    # Switch the current container between different layout styles
    bindsym --to-code $mod+m layout stacking    
    bindsym --to-code $mod+t layout tabbed
    bindsym --to-code $mod+Escape layout splith

    # Suspend on power button click
    bindsym --locked XF86PowerOff exec doas zzz

# Brightness controll
    bindsym --locked XF86MonBrightnessDown exec slight --path /sys/class/backlight/amdgpu_bl0/ -10
    bindsym --locked XF86MonBrightnessUp exec slight --path /sys/class/backlight/amdgpu_bl0/ 10
    bindsym --locked $alt+XF86MonBrightnessDown exec slight --path /sys/class/backlight/amdgpu_bl0/ -2
    bindsym --locked $alt+XF86MonBrightnessUp exec slight --path /sys/class/backlight/amdgpu_bl0/ 2

# Volume controll
    bindsym --locked XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
    bindsym --locked XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
    bindsym --locked XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
    bindsym --locked XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

# Mic volume controll
    bindsym --locked $alt+XF86AudioRaiseVolume exec pactl set-source-volume @DEFAULT_SOURCE@ +5%
    bindsym --locked $alt+XF86AudioLowerVolume exec pactl set-source-volume @DEFAULT_SOURCE@ -5%

# Music player
    bindsym --locked $mod+XF86AudioLowerVolume exec $player_prev
    bindsym --locked $mod+XF86AudioMute exec $player_pause_toggle
    bindsym --locked $mod+XF86AudioRaiseVolume exec $player_next

# Moving around:
    # Move your focus around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right

    # Move the focused window with the same, but add Shift
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right

# Workspaces:
    # Switch to workspace
    bindsym $mod+1 workspace number 1
    bindsym $mod+2 workspace number 2
    bindsym $mod+3 workspace number 3
    bindsym $mod+4 workspace number 4
    bindsym $mod+5 workspace number 5
    bindsym $mod+6 workspace number 6
    bindsym $mod+7 workspace number 7
    bindsym $mod+8 workspace number 8
    bindsym $mod+9 workspace number 9
    bindsym $mod+0 workspace number 10
    bindsym $mod+BracketLeft workspace prev
    bindsym $mod+BracketRight workspace next

    # Move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace number 1; workspace number 1
    bindsym $mod+Shift+2 move container to workspace number 2; workspace number 2
    bindsym $mod+Shift+3 move container to workspace number 3; workspace number 3
    bindsym $mod+Shift+4 move container to workspace number 4; workspace number 4
    bindsym $mod+Shift+5 move container to workspace number 5; workspace number 5
    bindsym $mod+Shift+6 move container to workspace number 6; workspace number 6
    bindsym $mod+Shift+7 move container to workspace number 7; workspace number 7
    bindsym $mod+Shift+8 move container to workspace number 8; workspace number 8
    bindsym $mod+Shift+9 move container to workspace number 9; workspace number 9
    bindsym $mod+Shift+0 move container to workspace number 10; workspace number 10
    bindsym $mod+BraceLeft move container to workspace prev; workspace prev
    bindsym $mod+BraceRight move container to workspace next; workspace next

# Layout stuff:
    # Make the current focus fullscreen
    bindsym --to-code $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym --to-code $mod+w floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+Tab focus mode_toggle

# Scratchpad:
    # Move the currently focused window to the scratchpad
    bindsym --to-code $mod+Shift+a move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym --to-code $mod+a scratchpad show

# Resizing containers:
mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

mode "browser" {
    # https://codeberg.org/dnkl/fuzzel/issues/106
    set $dmenu $(echo "" | $menu --lines=0 --dmenu)    
    set $toggle_kb swaymsg input "1:1:AT_Translated_Set_2_keyboard" xkb_switch_layout next

    # Search with with google
    set $search firefox --new-tab "https://www.google.com/search?q=$dmenu" && swaymsg "[app_id=Firefox] focus";
    bindsym --to-code s mode "default"; exec $search

    # Translate text from english to ukrainian
    set $te firefox --new-tab "https://translate.google.com/?sl=en&tl=uk&text=$dmenu" && swaymsg "[app_id=Firefox] focus";
    bindsym --to-code e mode "default"; exec $te

    # Translate text from ukrainian to english
    set $tu firefox --new-tab "https://translate.google.com/?sl=uk&tl=en&text=$dmenu" && swaymsg "[app_id=Firefox] focus";
    bindsym --to-code u mode "default"; exec $toggle_kb; exec $tu;

    # Search on github.com
    set $git firefox --new-tab "https://github.com/search?q=$dmenu" && swaymsg "[app_id=Firefox] focus";
    bindsym --to-code g mode "default"; exec $git

    bindsym --to-code r mode "rust"

    # Return to default mode
    bindsym Escape mode "default"
}
bindsym --to-code  $mod+s mode "browser"

mode "rust" {
    # Rust std
    set $rstd firefox --new-tab "https://doc.rust-lang.org/std/index.html?search=$dmenu" && swaymsg "[app_id=Firefox] focus";
    bindsym --to-code s mode "default"; exec $rstd

    # Rust crates
    set $rcrates firefox --new-tab "https://docs.rs/releases/search?query=$dmenu" && swaymsg "[app_id=Firefox] focus";
    bindsym --to-code c mode "default"; exec $rcrates

    # Return to default mode
    bindsym Escape mode "default"
}

mode "open" {
    set $tg telegram-desktop
    set $chrome chromium
    set $vm virt-manager
    set $latex texstudio
    set $libreoffice libreoffice
    set $qtcreator qtcreator
    set $files thunar
    set $win doas virsh start win10 & virt-manager --connect qemu:///system --show-domain-console win10

    set $gh firefox --new-tab "https://www.github.com/" && swaymsg "[app_id=Firefox] focus";
    set $alerts firefox --new-tab "https://alerts.in.ua/" && swaymsg "[app_id=Firefox] focus";
    set $weather firefox --new-tab "https://www.ventusky.com/" && swaymsg "[app_id=Firefox] focus";
    set $timetable firefox --new-tab "https://nulp.tk/#/%D0%9F%D0%97-22/2" && swaymsg "[app_id=Firefox] focus";

    bindsym --to-code a mode "default"; workspace number 1; exec $browser
    bindsym --to-code t mode "default"; workspace number 9; exec $tg
    bindsym --to-code c mode "default"; workspace number 3; exec $chrome
    bindsym --to-code v mode "default"; workspace number 5; exec $vm
    bindsym --to-code l mode "default"; workspace number 3; exec $latex
    bindsym --to-code o mode "default"; workspace number 3; exec $libreoffce
    bindsym --to-code q mode "default"; workspace number 3; exec $qtcreator
    bindsym --to-code f mode "default"; exec $files
    bindsym --to-code w mode "default"; workspace number 5; exec $win
    bindsym --to-code g mode "default"; exec $gh
    bindsym --to-code 1 mode "default"; exec $alerts
    bindsym --to-code 2 mode "default"; exec $weather
    bindsym --to-code 3 mode "default"; exec $timetable

    bindsym Escape mode "default"
}
bindsym --to-code $mod+e mode "open"

# Status Bar:
bar {
    swaybar_command waybar
}

